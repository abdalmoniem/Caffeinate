<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.button.MaterialButtonToggleGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appThemeToggleGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:selectionRequired="true"
    app:singleSelection="true">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/appThemeSystemDefaultButton"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:icon="@drawable/theme_system_default_icon"
        app:iconSize="30dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/appThemeSystemLightButton"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:icon="@drawable/theme_system_light_icon"
        app:iconSize="30dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/appThemeSystemDarkButton"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:icon="@drawable/theme_system_dark_icon"
        app:iconSize="30dp" />
</com.google.android.material.button.MaterialButtonToggleGroup>